// }
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL_PROD")
}

model User {
  id        String     @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  email     String     @unique
  username  String     @unique
  password  String
  favorites Favorite[]
}

model Favorite {
  id       String @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  image_id String
  user     User   @relation(fields: [userId], references: [id])
  userId   String @db.Uuid

  @@map("favorites")
}
